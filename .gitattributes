# .gitattributes - Ensure consistent line endings

# Default for all files
* text=auto

# Shell scripts should always use LF (Unix line endings)
*.sh text eol=lf
*.bash text eol=lf

# Dockerfiles should use LF
Dockerfile* text eol=lf
.dockerignore text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Python files
*.py text eol=lf

# Configuration files
.env* text eol=lf
*.conf text eol=lf
*.config text eol=lf

# Markdown
*.md text eol=lf

# Windows specific files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.docx binary
*.xlsx binary